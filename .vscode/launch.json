{
    "configurations": [
        {
            "name": "aiperf",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "aiperf.cli",
            "args": [
                "profile",
                "-m",
                "gpt2",
                "--log-level",
                "DEBUG",
                "--max-workers",
                "1"
            ]
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "module": "pytest",
            "args": [
                "-n",
                "auto"
            ]
        }
    ],
    "version": "0.2.0"
}